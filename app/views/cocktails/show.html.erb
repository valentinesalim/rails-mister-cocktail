<h1>Cocktail details</h1>
Name :<%= @cocktail.name%>
<% if @cocktail.doses.any? %>
  <ul>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> | <%= dose.ingredient.name %> | <%= link_to "Delete a dose", dose_path(dose) , method: :delete, data: {confirm: "Are you sure??"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No doses yet</p>
<% end %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail)  %>
<%= link_to 'Back to Main', cocktails_path %>